<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        app:popEnterAnim="@anim/key_anim_in"
        app:popExitAnim="@anim/key_anim_out"
        app:enterAnim="@anim/key_anim_in"
        app:exitAnim="@anim/key_anim_out"
        android:id="@+id/navigation_home"
        android:name="com.devsoncall.okdoc.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment" />

    <fragment
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/push_down_out"
        app:enterAnim="@anim/slide_in_left"
        app:exitAnim="@anim/push_down_out"
        android:id="@+id/navigation_profile"
        android:name="com.devsoncall.okdoc.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/profile_fragment" />

    <fragment
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/push_down_out"
        app:enterAnim="@anim/slide_in_left"
        app:exitAnim="@anim/push_down_out"
        android:id="@+id/navigation_settings"
        android:name="com.devsoncall.okdoc.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/settings_fragment" />

    <fragment
        android:id="@+id/navigation_credits"
        android:name="com.devsoncall.okdoc.fragments.CreditsFragment"
        android:label="Credits"
        tools:layout="@layout/credits_fragment" />

    <fragment
        android:id="@+id/navigation_languages"
        android:name="com.devsoncall.okdoc.fragments.LanguagesFragment"
        android:label="Languages"
        tools:layout="@layout/languages_fragment" />

    <fragment
        android:id="@+id/navigation_appointments"
        android:name="com.devsoncall.okdoc.fragments.AppointmentsFragment"
        android:label="Appointments"
        tools:layout="@layout/appointments_fragment" />

    <fragment
        android:id="@+id/navigation_prescription"
        android:name="com.devsoncall.okdoc.fragments.PrescriptionFragment"
        android:label="Prescription"
        tools:layout="@layout/prescription_fragment" />

    <fragment
        android:id="@+id/navigation_prescription_list"
        android:name="com.devsoncall.okdoc.fragments.PrescriptionListFragment"
        android:label="Prescriptions List"
        tools:layout="@layout/prescriptions_list_fragment" />

    <fragment
        android:id="@+id/navigation_diagnoses_list"
        android:name="com.devsoncall.okdoc.fragments.DiagnosesListFragment"
        android:label="Diagnoses List"
        tools:layout="@layout/diagnoses_list_fragment" />

    <fragment
        app:popEnterAnim="@anim/key_anim_in"
        app:popExitAnim="@anim/key_anim_out"
        app:enterAnim="@anim/key_anim_in"
        app:exitAnim="@anim/key_anim_out"
        android:id="@+id/navigation_professions"
        android:name="com.devsoncall.okdoc.fragments.ProfessionsFragment"
        android:label="Professions"
        tools:layout="@layout/professions_fragment" />

    <fragment
        app:popEnterAnim="@anim/key_anim_in"
        app:popExitAnim="@anim/key_anim_out"
        app:enterAnim="@anim/key_anim_in"
        app:exitAnim="@anim/key_anim_out"
        android:id="@+id/navigation_hospital_list"
        android:name="com.devsoncall.okdoc.fragments.HospitalListFragment"
        android:label="Hospitals List"
        tools:layout="@layout/hospital_list_fragment" />

    <fragment
        android:id="@+id/navigation_doctors"
        android:name="com.devsoncall.okdoc.fragments.DoctorsFragment"
        android:label="Doctor List"
        tools:layout="@layout/doctors_fragment" />

    <fragment
        android:id="@+id/navigation_diagnosis"
        android:name="com.devsoncall.okdoc.fragments.DiagnosisFragment"
        android:label="diagnosis_fragment"
        tools:layout="@layout/diagnosis_fragment" />
    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.devsoncall.okdoc.fragments.CalendarFragment"
        android:label="calendar_fragment"
        tools:layout="@layout/calendar_fragment" />

    <fragment
        android:id="@+id/navigation_hours"
        android:name="com.devsoncall.okdoc.fragments.HoursFragment"
        android:label="hours_fragment"
        tools:layout="@layout/hours_fragment" />

    <fragment
        android:id="@+id/navigation_confirmation"
        android:name="com.devsoncall.okdoc.fragments.ConfirmationFragment"
        android:label="confirmation_fragment"
        tools:layout="@layout/confirmation_fragment" />

    <fragment
        android:id="@+id/navigation_confirmed"
        android:name="com.devsoncall.okdoc.fragments.ConfirmedFragment"
        android:label="confirmed_fragment"
        tools:layout="@layout/confirmed_fragment" />

    <fragment
        android:id="@+id/navigation_error"
        android:name="com.devsoncall.okdoc.fragments.ErrorFragment"
        android:label="error_fragment"
        tools:layout="@layout/error_fragment" />


</navigation>