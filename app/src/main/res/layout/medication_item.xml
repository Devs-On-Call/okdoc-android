<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="358dp"
    android:layout_height="96dp"
    android:paddingHorizontal="6dp"
    android:paddingVertical="5dp">

    <View
        android:id="@+id/LinearLayoutPrescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="2dp"
        android:background="@drawable/white_border"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/imageViewMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:src="@drawable/ic_medicine_1"
        app:layout_constraintBottom_toBottomOf="@+id/LinearLayoutPrescription"
        app:layout_constraintStart_toStartOf="@+id/LinearLayoutPrescription"
        app:layout_constraintTop_toTopOf="@+id/LinearLayoutPrescription" />

    <TextView
        android:id="@+id/textViewMedicineTitle"
        style="@style/prescription_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:paddingTop="10dp"
        android:text="@string/medicine_title"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rich_black_80"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewMedicine"
        app:layout_constraintTop_toTopOf="@+id/LinearLayoutPrescription" />

    <TextView
        android:id="@+id/textViewDosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:text="@string/dosage"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rich_black_80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewMedicine"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedicineTitle" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:text="@string/duration"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/rich_black_80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewMedicine"
        app:layout_constraintTop_toBottomOf="@+id/textViewDosage" />


</androidx.constraintlayout.widget.ConstraintLayout>